{
  "name": "gypcrete-build",
  "version": "1.2.0",
  "description": "iCHEF web components library, built with React.",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/iCHEF/gypcrete.git"
  },
  "contributors": [
    "CJies Tan (https://github.com/cjies)",
    "Teng-hao Chang (https://github.com/zhusee2)"
  ],
  "license": "Apache-2.0",
  "engines": {
    "node": ">= 6.9.1",
    "npm": ">= 3.10.10"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepublish": "lerna run prepublish",
    "start": "lerna run storybook --stream",
    "release": "lerna publish -m \"Lerna publish %s\" --yes --repo-version $PACKAGE_VERSION && lerna run ghpages",
    "canary": "lerna publish -c --yes",
    "lint": "npm run lint:eslint && npm run lint:stylelint",
    "lint:eslint": "eslint ./packages --ignore-path=configs/.eslintignore ./ && echo \"eslint: no lint errors\"",
    "lint:stylelint": "stylelint ./packages/**/*.scss && echo \"stylelint: no lint errors\"",
    "flow": "flow",
    "test": "jest ./packages --config=configs/jest.config.json --coverage"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.3.2",
    "babel-plugin-module-resolver": "^3.0.0-beta.5",
    "babel-plugin-strip-css-imports": "zhusee2/babel-plugin-strip-css-imports",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.2.1",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "coveralls": "^2.13.1",
    "css-loader": "^0.26.2",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-ichef": "^1.1.4",
    "eslint-import-resolver-babel-module": "^4.0.0-beta.3",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "extract-text-webpack-plugin": "^2.0.0",
    "file-loader": "^0.10.1",
    "flow-bin": "^0.47.0",
    "jest": "^19.0.2",
    "lerna": "^2.4.0",
    "node-sass": "^4.5.3",
    "postcss-loader": "^1.3.3",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.13.2",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "webpack": "^2.2.1"
  },
  "babel": {
    "extends": "./configs/.babelrc"
  },
  "eslintConfig": {
    "root": true,
    "extends": "./configs/.eslintrc.yml"
  },
  "stylelint": {
    "extends": "./configs/.stylelintrc.yml"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}

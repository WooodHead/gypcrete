{
    "presets": [
        ["latest", { "es2015": { "modules": false } }],
        "react",
        "stage-2"
    ],

    "plugins": [
        "transform-runtime",
    ],

    "env": {
        "es5":{
            // The presets here will be run first, then go back to non-env presets.
            "presets": [
                "latest",
                "react",
                "stage-2"
            ],
            "plugins": [
                "strip-css-imports"
            ]
        },
        "lib": {
            "plugins": [
                "strip-css-imports"
            ]
        }
    }
}

{
  "name": "@ichef/gypcrete",
  "version": "1.2.0",
  "description": "iCHEF web components library, built with React.",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iCHEF/gypcrete.git"
  },
  "contributors": [
    "CJies Tan (https://github.com/cjies)",
    "Teng-hao Chang (https://github.com/zhusee2)"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/iCHEF/gypcrete/issues"
  },
  "homepage": "https://github.com/iCHEF/gypcrete#readme",
  "engines": {
    "node": ">= 6.9.1",
    "npm": ">= 3.10.10"
  },
  "scripts": {
    "build": "npm run build:dist && npm run build:lib && npm run build:es5",
    "build:dist": "webpack --config ./configs/webpack.dist.js --color",
    "build:lib": "BABEL_ENV=lib babel src --out-dir lib",
    "build:es5": "BABEL_ENV=es5 babel src --out-dir es5",
    "flow": "flow",
    "lint": "npm run flow && npm run lint:eslint && npm run lint:stylelint",
    "lint:eslint": "eslint --ignore-path=configs/.eslintignore ./ && echo \"eslint: no lint errors\"",
    "lint:stylelint": "stylelint **/*.scss && echo \"stylelint: no lint errors\"",
    "test": "jest ./src --config=configs/jest.config.json --coverage",
    "clean": "rm -rf ./dist ./lib ./es5 ./deploy ./public",
    "deploy": "npm run clean && npm run build && sh ./scripts/deploy.sh"
  }
}
